<%- include('./partials/header') %>
<link rel="stylesheet" href="/css/viewbooking.css">
</br>


<main class="page-content">
   
     
      

      <div class="container">
        <h3 style="text-align:center ;padding:30px;color:white;">Your Bookings</h3>
        <%- include('./partials/flashes') %>
        <div class="row">
            
         <!-- <table class="table table-striped table-primary"> -->
        <%if (bookings.length >0){ %>
         <table class="table">
        
          <thead>
            <tr>
             
              <th>Name</th>
              <th>Mobile No.</th>
              <th>Date & TIme</th>
              <th>person</th>
              <th>Table No.</th>
              
              
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            
            <% bookings.forEach(function(booking){ %>
            <tr>
              
              <td><%= booking.name %></td>
              <td><%= booking.mobile %></td>
              <td><%= booking.time %></td>
              <td><%= booking.person %></td>
              <td><%= booking.table %></td>
              
              
              <td>
                <a class="btn btn-secondary btn-xs" href="/view_booking_<%= booking._id %>"><i class="fa fa-eye"></i></a>
                <a class="btn btn-primary btn-xs" href="/edit_booking_<%= booking._id %>"><i class="fa fa-edit"></i></a>
                <a class="btn btn-danger btn-xs" href="/delete_booking_<%= booking._id %>"><i class="fa fa-trash"></i></a>
      
              </td>
            </tr>
            <% })}else{ %>
              <tr>
                  <td colspan="6">
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                      <h5>No Bookings Yet!</h5>
                      <button type="button" class="close" data-dismiss="alert">
                      
                      </button>
                  </div>
                    </td>
                  
                  
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      </div>
      
  </main>
